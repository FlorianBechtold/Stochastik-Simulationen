#!/bin/bash

# Install JupyterLab
pip install jupyterlab

# Install JupyterLab-compatible extensions
pip install ipywidgets  # Install ipywidgets for widgets support

# Install and configure JupyterLab widgets extension
jupyter labextension install @jupyter-widgets/jupyterlab-manager@0.38 --minimize=False

# Ensure that ipywidgets is enabled for JupyterLab
jupyter nbextension enable --py widgetsnbextension
